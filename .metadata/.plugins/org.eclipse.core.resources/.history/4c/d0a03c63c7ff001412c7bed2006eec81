	private SessionFactory getSessionFactory() {
		return sessionFactory;
	}
	
	private Session getSession() {
		Session session = getSessionFactory().getCurrentSession();
		if(session == null) {
			session = getSessionFactory().openSession();
		}
		return session;
	}
	
